mixin menu-item(head, title, href)
	li(class= head + "__menu-item")
		a(class = head + "__menu-link" href= href)&attributes(attributes)= title
			if(attributes.class == "menu-link-list")
				i.material-icons expand_more

mixin logo
	a.logo-link(href="#")
		img.logo-img(src="static/images/general/logo-color.svg", alt="")
